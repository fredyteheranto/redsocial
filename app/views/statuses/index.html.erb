<p id="notice"><%= notice %></p>

<h1>Listing Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.contenido %></td>
        <td><%= link_to 'Mostrar', status %></td>
        <td><%= link_to 'Editar', edit_status_path(status) %></td>
        <td><%= link_to 'Borrar', status, method: :delete, data: { confirm: 'Quieres Borrar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

